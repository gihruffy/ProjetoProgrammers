@using ProjetoProgrammers.Domain.Entities;
@model List<User>;

<h3 class="text-center">Lista de Usuarios</h3>
<div class="row">
    <div class="col-xs-12">
        <a href="@Url.Action("GetCreateUser", "User")" class="btn btn-primary">Cadastrar</a>
    
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <table class="table table-bordered" >
            <thead>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Açoes</th>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        <a asp-controller="User" asp-action="GetEditUser" asp-route-id="@user.Id" class="btn btn-warning"> Editar</a>
                        <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger"> Deletar</a>
                      
                    </td>
                }
                <tr></tr>
            </tbody>
        </table>
    </div>
</div>
